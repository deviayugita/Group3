<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_margin="10dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imgPembeli"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/default_user" />

    <android.support.v7.widget.CardView
        android:alpha="0.8"
        android:id="@+id/card_server"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_toEndOf="@id/imgPembeli"
        app:cardCornerRadius="6dp"
        app:cardElevation="5dp"
        app:cardUseCompatPadding="true"
        app:contentPadding="6dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp">

            <TextView
                android:id="@+id/tvNama"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:hint="Nama"
                android:textColor="@android:color/holo_green_dark"
                android:textSize="20sp"
                android:textStyle="bold"/>
            <View
                android:layout_below="@id/tvNama"
                android:background="@color/colorAccent"
                android:layout_width="match_parent"
                android:layout_height="5dp"/>

            <TextView
                android:layout_toRightOf="@id/tvNama"
                android:id="@+id/tvIdPembeli"
                android:layout_marginLeft="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_below="@id/tvIdPembeli"
                android:textSize="20sp"
                android:textStyle="bold"
                android:hint="Id User"/>

            <TextView
                android:id="@+id/tvAlamat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvNama"
                android:layout_marginTop="10dp"
                android:hint="Alamat : "
                android:textSize="15sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/tvAlamatContent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/tvAlamat"
                android:layout_below="@id/tvNama"
                android:layout_marginTop="10dp"
                android:hint="Jalan Kenangan"
                android:textSize="15sp"/>

            <TextView
                android:id="@+id/tvTempatlahir"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvAlamat"
                android:layout_marginTop="5dp"
                android:hint="TempatLahir :"
                android:textSize="15sp"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/tvTempatlahirContent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvAlamat"
                android:layout_toRightOf="@id/tvTempatlahir"
                android:layout_marginTop="5dp"
                android:hint="AREMA"
                android:textSize="15sp"/>
            <TextView
                android:id="@+id/tvUsername"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvTempatlahir"
                android:layout_marginTop="5dp"
                android:hint="Username :"
                android:textSize="15sp"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/tvUsernameContent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvTempatlahir"
                android:layout_toRightOf="@id/tvTempatlahir"
                android:layout_marginTop="5dp"
                android:hint="Admin"
                android:textSize="15sp"/>
            <TextView
                android:id="@+id/tvPassword"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvUsername"
                android:layout_marginTop="5dp"
                android:hint="Password :"
                android:textSize="15sp"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/tvPasswordContent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvUsername"
                android:layout_toRightOf="@id/tvTempatlahir"
                android:layout_marginTop="5dp"
                android:hint="Admin"
                android:textSize="15sp"/>
        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <View
        android:layout_below="@id/card_server"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:layout_marginTop="10dp"
        android:background="@color/colorPrimary"/>
</RelativeLayout>
